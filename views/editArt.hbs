<form method="post" action="/articles/{{title}}/edit?_method=PUT">
  <label>Title:
    <input type="text" name="title" value="{{title}}" id="" required>
  </label>
  <label>Author:
    <input type="text" name="author" value="{{author}}" id="" required>
  </label>
   <label>Body:
    <textarea rows="10" cols="30" name="body" id="" required>{{body}}</textarea>
  </label>
  <input type="submit" value="Submit" required>
</form>
<br> {{> footer}}